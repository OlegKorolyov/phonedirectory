<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <database-object>
        <create>create index record_name on record(lower(name))</create>
        <drop/>
    </database-object>

    <database-object>
        <create>create index record_number on record(lower(number))</create>
        <drop/>
    </database-object>

</hibernate-mapping>
